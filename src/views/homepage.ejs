<!doctype html>
<html lang="en">
  <head>
    <style>
      * {
        font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
          "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
      }

      .textField {
        margin: 0px 8px;
        padding: 8px 12px;
        border: 1px solid #232323;
        border-radius: 8px;
        font-size: 14px;
        width: 30%;
      }

      .btn {
        outline: none;
        margin: 0px 8px;
        padding: 8px 12px;
        border: 1px solid #232323;
        border-radius: 8px;
        background: #00511e;
        color: white;
        font-size: 14px;
      }

      table {
        border: 1px solid black;
        margin: 3rem 1rem;
      }

      th, 
      td {
        border: 1px solid black;
        padding: 8px 12px;
      }

    </style>
    <title>URL Shortner Homepage</title>
  </head>
  <body>
    <h1>URL Shortner..</h1>
    <div>
      <form
        action="/api/v1/route/url"
        method="post"
      >
        <label for="originalURL">Enter Original URL</label>
        <input
          type="text"
          class="textField"
          name="originalUrl"
          placeholder="https://example.com"
        />
        <button
          class="btn"
          type="submit"
        >
          Generate Short URL
        </button>
      </form>
    </div>
    <div>
      <% if (locals.data) { %>
        <p>URL Generated: <a href="http://localhost:8000/api/v1/route/url/<%= data.shortId %>">http://localhost:8000/api/v1/route/url/<%= data.shortId  %></a></p>
      <% } %>
    </div>
    <div>
      <% if (locals.urls) { %>
        <table>
          <thead>
            <th>Sr no.</th>
            <th>Original URL</th>
            <th>Short ID</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.redirectURL %></td>
                <td><%= url.shortId %></td>
                <td><%= url.clicks %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </body>
</html>
